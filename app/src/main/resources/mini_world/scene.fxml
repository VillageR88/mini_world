<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/24"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mini_world.FXMLController"
      spacing="10" alignment="CENTER"
      prefWidth="600" prefHeight="400">
  <children>
    <Label fx:id="label" />
    <Canvas fx:id="canvas" width="380" height="380" />
    <HBox spacing="10" alignment="CENTER">
    <Button fx:id="buttonSimulation" text="Run simulation" />
    <Button text="Quit" onAction="#handleButtonQuitClick"/>
    </HBox>
  </children>
</VBox>
